<body>
  <div class="container">
      <div class="low"><br>
        <h2><b><%= current_admin.name %></b> さんのページ</h2>
        <h3>問い合わせ一覧</h3>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>ユーザー名</th>
              <th>問い合わせタイトル</th>
              <th>受信日</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <% user.contact.each do |contact| %>
                <tr>
                  <td><%= contact.user.name %><%= user.name %></td>
                  <td><%= contact.title %></td>
                  <td><%= l contact.created_at, format: :short %></td>
                  <td><%= link_to "返信", edit_admins_contact_path(contact), class: "btn btn-success pull-right"  %></td>
                  <td><%= link_to "削除", admins_contact_path(contact), method: :delete, class: "btn btn-danger pull-right", "data-confirm" => "本当に削除しますか？"  %></td>
                 </tr>
              <% end %>
           <% end %>
          </tbody>
        </table>
      </div>
  </div>
</body>