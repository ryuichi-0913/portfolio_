<div class="container">
  <div class="low">
    <h1 style="text-align: center;">食品アイデア投稿</h1>
      <% if flash[:error].present? %>
        <ul class="errors">
          <% flash[:error].each do |e| %>
            <li><%= e %></li>
          <% end %>
        </ul>
      <% end %>
    <h2 style="padding-left: 30px; ">食品アイデアTOP３(いいね編)</h2>
      <!-- ランキングTOP３  -->
      <% @foodall_ranks.each.with_index(1) do |foodall_rank,i| %>
        <div class="card" >
          <div class="card-img-top"><%= link_to users_food_path(foodall_rank) do %>
            <%= attachment_image_tag foodall_rank, :food_image, size: '330x330',　format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
          <p><%="#{i}位"%></p>
          </div>
          <div class="card-body">
            <h4 class="card-title"><%= link_to users_food_path(foodall_rank) do %>
              <%= foodall_rank.food_name %>
            <% end %></h4>
            <p class="card-text">
              <%= link_to foodall_rank.user.name, users_user_path(foodall_rank.user) %></p>
            <div style="padding-bottom: 5px">
              <span class="badge badge-secondary" >
                <%= foodall_rank.tag_list %></span>
                <%= foodall_rank.food_comments.count %>件コメント
            </div>
            <!-- いいね表示ここから -->
            <div>
              <% if user_signed_in? %>
                  <span class="food_<%= foodall_rank.id %>" style="display: block; text-align: left;">
                    <%= render 'food', food: foodall_rank %>
                  </span>
              <% else %>
                  <span class = "iine__button text-right">
                    ♡️<%= foodall_rank.food_favorites.count %>
                  </span>
              <% end %>
            </div>
            <!-- いいね表示ここからまで -->
            <div><p class="text-right">
              <%= l foodall_rank.created_at, format: :short %></p>
            </div>
          </div>
        </div>
      <% end %>
      <!-- ランキングここまで -->
      <br><br><br><br>
      <!-- 一覧投稿 -->
      <h2 style="padding-left: 30px; ">みんなの食品アイデア投稿</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>アイデア画像</th>
            <th>アイデア名</th>
            <th>ジャンル</th>
            <th>投稿者名</th>
            <th>投稿日時</th>
            <th>いいね</th>
          </tr>
        </thead>
        <tbody>
          <% @foods.each do |food|%>
            <tr>
              <td class="foodtd1"><%= link_to users_food_path(food) do %>
                <%= attachment_image_tag food, :food_image, size: '150x150',　format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %></td>
              <td class="foodtd1"><%= link_to users_food_path(food) do %>
                <%= food.food_name %>
              <% end %></td>
              <td><span class="badge badge-secondary">
                <%= food.tag_list %></span></td>
              <td class="foodtd1">
                <%= link_to food.user.name, users_user_path(food.user) %></td>
              <td><%= l food.created_at, format: :short %></td>
              <td class="foodtd1">
                <div>
                  <% if user_signed_in? %>
                      <span class="food_<%= food.id %>" style="display: block; text-align: left;">
                        <%= render 'food', food: food %>
                      </span>
                  <% else %>
                      <span class = "iine__button text-right">
                        ♡️<%= food.food_favorites.count %>
                      </span>
                  <% end %>
                </div>
              </td>
           </tr>
        　<% end %>
        </tbody>
      </table>
      <!-- 一覧ここまで -->
   <span style="display: block; text-align: center;"><%= paginate @foods %></span>
  </div>
</div>

