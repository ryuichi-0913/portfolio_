 <div class="container">
  <div class="low">
    <h1>食品アイデア</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>アイデア画像/アイデア名</th>
          <th>投稿者名</th>
          <th>投稿日時</th>
          <th>いいね</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food|%>
          <tr>
            <td><%= link_to users_food_path(food) do %>
                  <%= attachment_image_tag food, :food_image, size: '60x60',　format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
               <%= link_to users_food_path(food) do %>
                  <%= food.food_name %>
                <% end %>
            </td>
            <td>
              <%= link_to food.user.name, users_user_path(food.user) %></td>
            <td><%= food.created_at.strftime('%Y/%m/%d') %></td>
           <!-- いいねここから -->
          <td>
              <div class = "iine__button">♡️<%= food.food_favorites.count %></div>
          </td>
         </tr>
      　<% end %>
      </tbody>
    </table>
  <span style="display: block; text-align: center;"><%= paginate @foods %></span>
  </div>
</div>
