<body>

<div class="container">
<div class="col-xs-12">
<h2>Follower Users</h2>
 <table class="table table-hover table-inverse">
    <thead>
      <tr> 
        <th>Image</th>
        <th>Name</th>
        <th></th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <tbody>
       <% @user.follower_user.each do |user| %>
         <tr>
         <td>
          <%= attachment_image_tag user, :user_image, size: '30x30', format: 'jpeg', fallback: "no_image.jpg" %>
         </td>
         　<td><%= user.id%></td>
          <td><%= user.name%></td>
          <td>フォロー数:<%= user.follower.count %></td>
          <td>フォロワー数:<%= user.followed.count %></td>
          <td><%= link_to 'Show',users_user_path(user) %></td>
        </tr>
        <% end %>
    </tbody>
　</table>
</div>
</div>

</body>