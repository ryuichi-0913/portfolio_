<body>
  <div class="container">
    <div class="col-xs-12">
    <h2>フォロワー一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
              <tr> 
                <th>投稿者</th>
                <th>投稿者名</th>
                <th>性別</th>
                <th>年代</th>
                <th colspan="3"></th>
              </tr>
        </thead>
          <tbody>
              <% @user.follower_user.each do |user| %>
                  <tr>
                      <td>
                      <%= attachment_image_tag user, :user_image, size: '60x60', format: 'jpeg', fallback: "no_image.jpg" %>
                      </td>
                      <td><%= user.name%></td>
                      <td><%= user.gender_i18n %></td>
                      <td><%= user.age_group_i18n %></td>
                      <td>フォロー数:<%= user.follower.count %></td>
                      <td>フォロワー数:<%= user.followed.count %></td>
                      <td><%= link_to 'プロフィールを見る',users_user_path(user) %></td>
                  </tr>
              <% end %>
          </tbody>
      　</table>
    </div>
  </div>
</body>