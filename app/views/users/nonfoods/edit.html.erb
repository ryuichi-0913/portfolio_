<body>
	<div class="container">
	 <h2><b><%= @user.name %></b> さんの非食品編集ページ</h2>
	    <div class="row">
			<div class="col-md-5">
				<%= form_for(@nonfood, url: users_nonfood_path ) do |f| %>
					<div><%= f.label :nonfood_image, "非食品イメージ画像" %>
						<%= attachment_image_tag @nonfood, :nonfood_image, format: "jpeg", id: "img_prev", fallback: "no_image.jpg", style: "height: 200px; width:200px;"  %><br>
						画像選択<%= f.attachment_field :nonfood_image %></div>
				　　<div>
						<%= f.label :nonfood_name, "アイデア名（非食品）" %>
				　　		<%= f.text_field :nonfood_name, :size=>"60" %></div>
				  　<div>
				  		<%= f.label :nonfood_introduction, "商品説明" %><br>
				  　　	<%= f.text_area :nonfood_introduction, :size=>"60x11" %>
				  	</div>
				  	<div>
				  		<%= f.submit('保存する',class: 'btn btn-info my-1 mb-5 px-5') %>
				  	</div>
				<% end %>
			</div>
		</div>
	</div>
</body>