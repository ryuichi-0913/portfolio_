<div class="container">
  <div class="low">
    <h1>非食品アイデア</h1>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>アイデア画像/アイデア名</th>
          <th>投稿者イメージ/投稿者名</th>
          <th>投稿日時</th>
          <th>いいね</th>
        </tr>
      </thead>
      <tbody>
        <% @nonfoods.each do |nonfood|%>
          <tr>
            <td><%= link_to users_nonfood_path(nonfood) do %>
                  <%= attachment_image_tag nonfood, :nonfood_image, size: '60x60',　format: 'jpeg', fallback: "no_image.jpg" %>
                <% end %>
               <%= link_to users_nonfood_path(nonfood) do %>
                  <%= nonfood.nonfood_name %>
                <% end %>
            </td>
            <td><%= link_to users_user_path(nonfood.user), class: 'hoge' do %>
              <%= attachment_image_tag nonfood.user, :user_image, size: '60x60',　format: 'jpeg', fallback: "no_image.jpg" %>
              <% end %>
              <%= link_to nonfood.user.name, users_user_path(nonfood.user) %></td>
            <td><%= nonfood.created_at.strftime('%Y/%m/%d') %></td>
           <!-- いいねここから -->
          <% if nonfood.nonfood_favorited_by?(current_user) %>
          <td>
            <%= link_to users_nonfood_nonfood_favorites_path(nonfood), method: :delete do %>
              <%= nonfood.nonfood_favorites.count %> いいね
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to users_nonfood_nonfood_favorites_path(nonfood), method: :post do %>
              <%= nonfood.nonfood_favorites.count %> いいね
            <% end %>
          </td>
          <% end %>
          <!-- ここまで --></td>
         </tr>
      　<% end %>
      </tbody>
    </table>
  </div>
</div>