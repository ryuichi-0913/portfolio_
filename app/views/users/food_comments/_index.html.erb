<thead>
  <tr>
    <th colspan="3"></th>
  </tr>
</thead>
<% @food.food_comments.each do |food_comment| %>
  <tbody>
      <tr>
        <td class="user_comment_image"><%= link_to users_user_path(food_comment.user), class: 'hoge' do %>
              <%= attachment_image_tag food_comment.user, :user_image,　format: 'jpeg', fallback: "no_image.jpg", style: "border-radius:50%;" %><br>
              <%= food_comment.user.name %>
            <% end %></td>
        <td><%= l food_comment.created_at, format: :short %><br>
          <p><%= food_comment.food_comment %></p></td>
        <td><% if food_comment.user == current_user %>
          　 <%= link_to "削除", users_food_food_comment_path(food_comment.food, food_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
            <% end %></td>
      </tr>
  </tbody>
<% end %>